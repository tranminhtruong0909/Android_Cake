<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu nền khi nhấn -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Trạng thái khi kích hoạt (focused) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/> <!-- Màu nền khi kích hoạt -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Trạng thái mặc định (default) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền mặc định -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Viền nhẹ -->
        </shape>
    </item>

</selector>
